<Window x:Class="DialogWindowPolizei"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lopstaControlAdressenVerzeichnis"
        mc:Ignorable="d"
        d:DesignHeight="450" d:DesignWidth="800">
    <Window.Style>
        <Style TargetType="Window">
            <Setter Property="Title" Value="Adresse"/>
            <Setter Property="Topmost" Value="True"/>
            <Setter Property="ShowInTaskbar" Value="False"/>
            <Setter Property="SizeToContent" Value="WidthAndHeight"/>
            <Setter Property="ResizeMode" Value="NoResize"/>
        </Style>
    </Window.Style>

    <Grid>

        <Grid.Style>
            <Style TargetType="Grid">
                <Setter Property="Margin" Value="10,10,10,10"/>
            </Style>
        </Grid.Style>

        <local:UserControlPolizei VerticalAlignment="Top" x:Name="UserControlFORMULAR"/>
        
    </Grid>
</Window>
